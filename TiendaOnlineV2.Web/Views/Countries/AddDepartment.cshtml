@model TiendaOnlineV2.Web.Models.Department

@{
    ViewData["Title"] = "Add Department";
}

<h2>Agregar</h2>
<h4>Departamento</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="AddDepartment">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdCountry" />
            <partial name="_Department" />
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
                <a asp-action="Details" asp-route-id="@Model.IdCountry" class="btn btn-success">Regresar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}